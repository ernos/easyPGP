<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="365dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="#9D1F1F"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersion"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewSelectKey"
        android:layout_width="164dp"
        android:layout_height="36dp"
        android:text="Select recipient:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/spinnerRecipients"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="187dp" />

    <Spinner
        android:id="@+id/spinnerRecipients"
        android:layout_width="179dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSelectKey"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editTextInput"
        android:layout_width="354dp"
        android:layout_height="87dp"
        android:gravity="top|start"
        android:hint="Enter text to encrypt/decrypt here"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSelectKey"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="249dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSelectKey"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="60dp">

        <Button
            android:id="@+id/btnEncrypt"
            style="@style/CustomButtonStyle"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:text="Encrypt" />

        <Button
            android:id="@+id/btnDecrypt"
            style="@style/CustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypt" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="351dp"
        android:layout_height="203dp"
        android:layout_marginEnd="4dp"
        android:background="@android:drawable/edit_text"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:text="Output will appear here"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/editTextInput"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/spinnerRecipients"
        app:layout_constraintEnd_toStartOf="@+id/textViewStatus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewVersion"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersion"
        app:layout_constraintVertical_bias="0.214">

        <Button
            android:id="@+id/btnSettings"
            style="@style/CustomButtonStyle"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="Settings" />

        <Button
            android:id="@+id/btnUnlock"
            style="@style/CustomButtonStyle"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="Unlock"
            android:visibility="visible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>